@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Input.FirstName" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Input.FirstName" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Input.LastName" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Input.LastName" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Input.Email" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Input.Email" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Input.PhoneNumber" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Input.Address" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Input.Address" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Input.Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Input.City" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Input.City" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Input.City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Input.PostalCode" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Input.PostalCode" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Input.Password" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Input.Password" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Input.ConfirmPassword" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-4">
                    <button type="submit" class="btn btn-primary form-control">Register</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
